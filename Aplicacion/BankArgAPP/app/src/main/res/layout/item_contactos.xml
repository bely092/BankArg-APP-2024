<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">
    <LinearLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical">

        <TextView
            android:id="@+id/textViewNombreContacto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/poppins"
            android:text="Nombre"
            android:textColor="@color/col1"
            android:textColorHighlight="@color/col1"
            android:textColorHint="@color/col1"
            android:textColorLink="@color/col1"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewCBU"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="CBU"
            android:textColor="@color/col5"
            android:textColorHighlight="@color/col5"
            android:textColorHint="@color/col5"
            android:textColorLink="@color/col5" />
    </LinearLayout>

    <Button
        android:id="@+id/buttonEliminarContacto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/col1"
        android:fontFamily="@font/poppins"
        android:text="Eliminar"
        android:textColor="@color/col2"
        android:textColorHighlight="@color/col2"
        android:textColorHint="@color/col2"
        android:textColorLink="@color/col2" />
</LinearLayout>