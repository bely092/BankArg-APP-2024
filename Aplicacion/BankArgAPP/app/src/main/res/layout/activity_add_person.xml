<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".AgregarPersonasActivity">

    <!--    tools:openDrawer="start"-->

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:scrollbarSize="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/col6"
            tools:context=".MainActivity">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="102dp"
                    android:background="@color/col1"
                    android:paddingTop="5dp"
                    android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                    app:buttonGravity="center_vertical" />


            </LinearLayout>

            <View
                android:id="@+id/account_cir"
                android:layout_width="60dp"
                android:layout_height="60.96dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/baseline_person_pin_24"
                app:layout_constraintEnd_toEndOf="@+id/linearLayout"
                app:layout_constraintTop_toTopOf="@+id/linearLayout" />


            <!--            HEADER END -->

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView3"
                android:layout_width="351dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"

                android:background="@color/col4"
                android:backgroundTint="@color/col4"
                android:paddingBottom="20dp"
                app:cardBackgroundColor="@color/col4"
                app:cardCornerRadius="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical">


                    <!--            <View-->
                    <!--                android:id="@+id/vista_agregarpers"-->
                    <!--                android:layout_width="match_parent"-->
                    <!--                android:layout_height="500dp"-->
                    <!--                android:layout_alignParentLeft="true"-->
                    <!--                android:layout_alignParentTop="true"-->
                    <!--                android:layout_marginStart="24dp"-->
                    <!--                android:layout_marginEnd="24dp"-->
                    <!--                app:layout_constraintEnd_toEndOf="parent"-->
                    <!--                app:layout_constraintStart_toStartOf="parent"-->
                    <!--                app:layout_constraintTop_toBottomOf="@+id/agregar" />-->

                    <TextView
                        android:id="@+id/agregar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="false"
                        android:layout_alignParentTop="false"
                        android:layout_marginTop="30dp"
                        android:fontFamily="@font/poppins"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="Agrega un contacto"
                        android:textAppearance="@style/env_anos_un"
                        android:textColor="@color/col1"
                        android:textSize="20sp"
                        android:textStyle="normal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

                    <EditText
                        android:id="@+id/nombrePers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="50dp"
                        android:layout_marginEnd="16dp"
                        android:background="?android:attr/fastScrollPreviewBackgroundRight"
                        android:backgroundTint="#DEE1E0"
                        android:drawableLeft="@drawable/baseline_person_24"
                        android:drawablePadding="8dp"
                        android:fontFamily="@font/poppins"
                        android:hint="Nombre"
                        android:inputType="text|textPersonName"
                        android:minHeight="50dp"
                        android:padding="8dp"
                        android:textColor="@color/col1"
                        android:textColorHighlight="@color/cardview_dark_background"
                        android:textColorHint="@color/col1"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/editTextCBU" />
                    <!-- app:layout_constraintTop_toBottomOf="@+id/editTextAlias"-->


                    <EditText
                        android:id="@+id/editTextCBU"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:background="?android:attr/fastScrollPreviewBackgroundRight"
                        android:backgroundTint="#DEE1E0"
                        android:drawableLeft="@drawable/baseline_account_balance_wallet_24"
                        android:drawablePadding="8dp"
                        android:fontFamily="@font/poppins"
                        android:hint="CBU/CVU"
                        android:inputType="number|numberDecimal"
                        android:minHeight="50dp"
                        android:padding="8dp"
                        android:textColor="@color/col1"
                        android:textColorHighlight="@color/cardview_dark_background"
                        android:textColorHint="@color/col1"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/agregar" />

                    <!--
         <EditText
             android:id="@+id/editTextAlias"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginStart="32dp"
             android:layout_marginTop="16dp"
             android:layout_marginEnd="32dp"
             android:background="?android:attr/fastScrollPreviewBackgroundRight"
             android:backgroundTint="@color/col4"
             android:drawableLeft="@drawable/baseline_person_24"
             android:drawablePadding="8dp"
             android:fontFamily="@font/poppins"
             android:hint="Alias"
             android:inputType="text"
             android:minHeight="60dp"
             android:padding="8dp"
             android:textColor="@color/col1"
             android:textColorHighlight="@color/cardview_dark_background"
             android:textColorHint="@color/col1"
             android:textSize="16sp"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintTop_toBottomOf="@+id/editTextCBU" />  -->


                    <Button
                        android:id="@+id/buttonAddPerson"
                        android:layout_width="200dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="50dp"
                        android:backgroundTint="@color/col1"
                        android:fontFamily="@font/poppins"
                        android:text="Agregar"
                        android:textColor="@color/col2"
                        android:textSize="16sp"
                        app:cornerRadius="24dp"
                        app:layout_constraintBottom_toTopOf="@+id/rectangle_2"
                        app:layout_constraintTop_toBottomOf="@+id/nombrePers" />

                    <TextView
                        android:id="@+id/textView26"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/poppins"
                        android:text="Contactos Agendados:"
                        android:textColor="@color/col1"
                        android:textColorHighlight="@color/col1"
                        android:textColorHint="@color/col1"
                        android:textColorLink="@color/col1"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerViewContactos"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginRight="5dp"
                        android:fadeScrollbars="false"
                        android:scrollbars="vertical"
                        app:layout_constraintTop_toBottomOf="parent" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <!--            FOOTER START -->

            <View
                android:id="@+id/rectangle_2"
                android:layout_width="wrap_content"
                android:layout_height="57dp"
                android:layout_marginTop="50dp"

                android:background="@color/col1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView3" />

            <TextView
                android:id="@+id/bankarg_des"
                style="@style/bankarg_des"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/bankarg_des"
                android:textAppearance="@style/bankarg_des"
                android:textColor="@color/col2"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.492"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView3"
                app:layout_constraintTop_toTopOf="@+id/rectangle_2"
                app:layout_constraintVertical_bias="0.44" />
            <!-- FOOTER END -->


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:backgroundTint="@color/col1"
        app:headerLayout="@layout/header"
        app:itemIconTint="@color/col6"
        app:itemTextColor="@color/col6"
        app:menu="@menu/main_menu"
        app:subheaderColor="@color/col2" />

</androidx.drawerlayout.widget.DrawerLayout>



